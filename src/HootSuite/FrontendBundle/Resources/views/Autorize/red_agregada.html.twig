<div id="{{profile.id}}" class="red_added space-1">
    <i class="glyphicon glyphicon-remove btn-remove"></i>
    <img src="{{profile.avatar}}" style="display: inline-block; width: 50px; height: 50px; vertical-align: top;" />
    <div style="display: inline-block; padding: 5px;">
        <div style="font-weight: bold; margin-bottom: 2px;">{{profile.socialnetwork.name}}</div>
        <div style="font-size: 13px;">{{profile.username}}</div>
    </div>
</div>