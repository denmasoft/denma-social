<div style="font-weight: bold; font-size: 16px; padding-bottom: 5px;">Paginas de Google</div>
{% for gr in pages %}
    <div style="max-height: 300px; overflow-y: auto; padding: 5px 0; border-top: 1px solid #e1e1e1;">
        <div class="group-row">
            <span style="float: left;">{{gr.name}}</span>
            <button style="float: right;" 
                    ng-click="fbAddGroup('{{gr.id}}')"
                    id="fb-group-{{gr.id}}" gid="{{gr.id}}"
                    class="select-fb-group btn btn-sm btn-success"><i class="glyphicon glyphicon-plus"></i> Agregar</button>
            <div class="clearfix"></div>
        </div>
    </div>
{% endfor %} 